package exerciciosscanner;

import java.util.Scanner;

public class graus { // atalho class
    public static void main(String[] args) { // atalho psvm
        Scanner temperatura = new Scanner(System.in); // criação do scanner

        while (true) { // sistema de loop
            System.out.println("Esse algoritmo transforma temperaturas em celsius em fahrenheit, coloque uma temperuta para a conversão (Digite 99 para encerrar o algoritmo)"); // mensagem ao usuário
            double celsius = temperatura.nextDouble(); // criação da variável 

            if (celsius == 99) {
                System.out.println("Encerrando algoritmo"); // mensagem de encerramento
                break; // encerramento do sistema de loop
            } else {
                System.out.println(celsius * 1.8 + 32); // mensagem final
            }
        }
        temperatura.close(); // encerramento do scanner
    }
}
