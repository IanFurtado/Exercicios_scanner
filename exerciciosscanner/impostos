package exerciciosscanner; // nome do pacote

import java.util.Scanner; // atalho class

public class impostos {
    public static void main(String[] args) { // atalho psvm
        Scanner carro = new Scanner(System.in); // criação do scanner

        
        System.out.println("Esse programa cálcula o valor de um carro somando o custo fabricação às taxas e os impostos, insira o custo e receberá o valor de mercado do carro."); // mensagem ao usuário
        double valor = carro.nextLong(); // valor de fabricação do veiculo
        double distribuidor = valor * 0.15; // taxa do distribuidor
        double imposto = valor * 0.3; // impostos
        double valortotal = valor + distribuidor + imposto; // valor de mercado
        System.out.println("Taxa do distribuidor: " + distribuidor); // informações ao usuário
        System.out.println("impostos: " + imposto);
        System.out.println("valor total de mercado: " + valortotal); // mensagem de valor total
        carro.close(); // encerramento do scanner
    }
}
